{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "listAllBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::*"
      ]
    },
    {
      "Sid": "allowAccessToMojoFileTransferBucket",
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "${s3_mojo_file_transfer_arn}",
        "${s3_mojo_file_transfer_arn}/*"
      ]
    }
  ]
}
